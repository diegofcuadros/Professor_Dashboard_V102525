# Railway Production Environment Template
# Copy these to Railway environment variables

# ===== LAB CONFIGURATION =====
LAB_NAME=DataProfessor Research Lab
PROFESSOR_EMAIL=admin@dataprofessor-lab.com
PROFESSOR_NAME=Dr. DataProfessor

# ===== DATABASE CONFIGURATION =====
# Railway will provide this automatically when you add PostgreSQL service
DATABASE_URL=${{Postgres.DATABASE_URL}}

# ===== SECURITY CONFIGURATION =====
# Generate secure random string for production
SESSION_SECRET=${{RAILWAY_STATIC_URL}}_secure_session_key
BCRYPT_ROUNDS=12

# ===== REDIS CONFIGURATION =====
# Optional - Railway can provide Redis service
# REDIS_URL=${{Redis.REDIS_URL}}

# ===== AI/ML CONFIGURATION =====
# Railway supports persistent volumes for Ollama
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b
AI_ANALYSIS_ENABLED=true
GOOGLE_API_KEY=${{GOOGLE_API_KEY}}
GEMINI_COMPLETIONS_MODEL=gemini-1.5-pro
GEMINI_EMBEDDINGS_MODEL=text-embedding-004
GEMINI_MAX_OUTPUT_TOKENS=2048

# ===== EMAIL CONFIGURATION =====
# Configure with your email provider
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

FROM_EMAIL=noreply@dataprofessor-lab.com
FROM_NAME=DataProfessor Lab System

# ===== SCHEDULE CONFIGURATION =====
MINIMUM_WEEKLY_HOURS=20
SCHEDULE_APPROVAL_REQUIRED=true
CHECK_IN_REMINDER_HOUR=9
CHECK_OUT_REMINDER_HOUR=17

# ===== NOTIFICATION CONFIGURATION =====
DAILY_DIGEST_HOUR=18
WEEKLY_REPORT_DAY=5
WEEKLY_REPORT_HOUR=17

# ===== FILE STORAGE =====
UPLOAD_PATH=./uploads
REPORTS_PATH=./reports
MAX_FILE_SIZE=50MB
RAG_DEFAULT_CHUNK_SIZE=800
RAG_CHUNK_OVERLAP=120
RAG_SIGNED_URL_TTL_SECONDS=900

# ===== CLOUD STORAGE (CLOUDFLARE R2) =====
R2_ACCOUNT_ID=${{R2_ACCOUNT_ID}}
R2_ACCESS_KEY_ID=${{R2_ACCESS_KEY_ID}}
R2_SECRET_ACCESS_KEY=${{R2_SECRET_ACCESS_KEY}}
R2_BUCKET=${{R2_BUCKET}}
R2_S3_ENDPOINT=${{R2_S3_ENDPOINT}}
R2_PUBLIC_BASE_URL=${{R2_PUBLIC_BASE_URL}}
R2_DEFAULT_PREFIX=uploads

# ===== PRODUCTION SETTINGS =====
NODE_ENV=production
PORT=${{PORT}}
LOG_LEVEL=info
