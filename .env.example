# LIA Lab Management System - Environment Configuration

# ===== LAB CONFIGURATION =====
LAB_NAME="Your Research Lab Name"
PROFESSOR_EMAIL="professor@university.edu"
PROFESSOR_NAME="Dr. Your Name"

# ===== DATABASE CONFIGURATION =====
DATABASE_URL="postgresql://lia_user:lia_password@localhost:5432/lia_lab"

# ===== SECURITY CONFIGURATION =====
SESSION_SECRET="your-unique-session-secret-change-this-in-production"
BCRYPT_ROUNDS=10

# ===== REDIS CONFIGURATION =====
REDIS_URL="redis://:lia_redis_password@localhost:6379"
REDIS_PASSWORD="lia_redis_password"

# ===== AI/ML CONFIGURATION =====
OLLAMA_HOST="http://localhost:11434"
OLLAMA_MODEL="llama3.1:8b"
AI_ANALYSIS_ENABLED=true

# ===== EMAIL CONFIGURATION =====
# For development (uses MailDev)
SMTP_HOST="localhost"
SMTP_PORT=1025
SMTP_SECURE=false

# For production (configure with your email provider)
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT=587
# SMTP_SECURE=true
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-password"

FROM_EMAIL="lia-system@your-lab.edu"
FROM_NAME="LIA Lab System"

# ===== SCHEDULE CONFIGURATION =====
MINIMUM_WEEKLY_HOURS=20
SCHEDULE_APPROVAL_REQUIRED=true
CHECK_IN_REMINDER_HOUR=9
CHECK_OUT_REMINDER_HOUR=17

# ===== NOTIFICATION CONFIGURATION =====
DAILY_DIGEST_HOUR=18
WEEKLY_REPORT_DAY=5
WEEKLY_REPORT_HOUR=17

# ===== FILE STORAGE =====
UPLOAD_PATH="./uploads"
REPORTS_PATH="./reports"
MAX_FILE_SIZE=50MB

# ===== DEVELOPMENT SETTINGS =====
NODE_ENV="development"
PORT=5000
LOG_LEVEL="info"

# ===== PRODUCTION SETTINGS (uncomment for production) =====
# NODE_ENV="production"
# PORT=5000
# SSL_CERT_PATH="/path/to/ssl/cert.pem"
# SSL_KEY_PATH="/path/to/ssl/key.pem"