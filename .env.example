# LIA Lab Management System - Environment Configuration

# ===== LAB CONFIGURATION =====
LAB_NAME="Your Research Lab Name"
PROFESSOR_EMAIL="professor@university.edu"
PROFESSOR_NAME="Dr. Your Name"

# ===== DATABASE CONFIGURATION =====
DATABASE_URL="postgresql://lia_user:lia_password@localhost:5432/lia_lab"

# ===== SECURITY CONFIGURATION =====
SESSION_SECRET="your-unique-session-secret-change-this-in-production"
BCRYPT_ROUNDS=10

# ===== REDIS CONFIGURATION =====
REDIS_URL="redis://:lia_redis_password@localhost:6379"
REDIS_PASSWORD="lia_redis_password"

# ===== AI/ML CONFIGURATION =====
OLLAMA_HOST="http://localhost:11434"
OLLAMA_MODEL="llama3.1:8b"
AI_ANALYSIS_ENABLED=true
GOOGLE_API_KEY="your-gemini-api-key"
GEMINI_COMPLETIONS_MODEL="gemini-1.5-pro"
GEMINI_EMBEDDINGS_MODEL="text-embedding-004"
GEMINI_MAX_OUTPUT_TOKENS=2048

# ===== EMAIL CONFIGURATION =====
# For development (uses MailDev)
SMTP_HOST="localhost"
SMTP_PORT=1025
SMTP_SECURE=false

# For production (configure with your email provider)
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT=587
# SMTP_SECURE=true
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-password"

FROM_EMAIL="lia-system@your-lab.edu"
FROM_NAME="LIA Lab System"

# ===== SCHEDULE CONFIGURATION =====
MINIMUM_WEEKLY_HOURS=20
SCHEDULE_APPROVAL_REQUIRED=true
CHECK_IN_REMINDER_HOUR=9
CHECK_OUT_REMINDER_HOUR=17

# ===== NOTIFICATION CONFIGURATION =====
DAILY_DIGEST_HOUR=18
WEEKLY_REPORT_DAY=5
WEEKLY_REPORT_HOUR=17

# ===== FILE STORAGE =====
UPLOAD_PATH="./uploads"
REPORTS_PATH="./reports"
MAX_FILE_SIZE=50MB
RAG_DEFAULT_CHUNK_SIZE=800
RAG_CHUNK_OVERLAP=120
RAG_SIGNED_URL_TTL_SECONDS=900

# ===== CLOUD STORAGE (CLOUDFLARE R2) =====
R2_ACCOUNT_ID="your-cloudflare-account-id"
R2_ACCESS_KEY_ID="your-r2-access-key"
R2_SECRET_ACCESS_KEY="your-r2-secret-key"
R2_BUCKET="lia-lab-documents"
R2_S3_ENDPOINT="https://<account-id>.r2.cloudflarestorage.com"
R2_PUBLIC_BASE_URL="https://pub-xxxxxxxxxxxxxxxx.r2.dev"
R2_DEFAULT_PREFIX="uploads"

# ===== DEVELOPMENT SETTINGS =====
NODE_ENV="development"
PORT=5000
LOG_LEVEL="info"

